{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "inlineSourceMap": true,
    "pretty": true,
    "declaration": true,
    "lib": ["es6"],
    "alwaysStrict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "tsdi"
    ]
  },
  "exclude": [
    "tests",
    "node_modules",
    "example"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}
