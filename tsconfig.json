{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "inlineSourceMap": true,
    "pretty": true,
    "declaration": true,
    "lib": ["es6"],
    "alwaysStrict": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "reflect-metadata",
      "typedi"
    ]
  },
  "exclude": [
    "tests"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "include": [
    "src/**/*.ts",
    "node_modules/typedi"
  ]
}
