{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "inlineSourceMap": true,
    "declaration": true,
    "lib": ["es6"],
    "removeComments": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "reflect-metadata"
    ]
  },
  "exclude": [
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts",
    "node_modules/typedi/**/*.ts",
    "node_modules/@types/jest/index.d.ts"
  ]
}
